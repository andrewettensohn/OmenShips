@page "/modules"

<MudGrid>
    <MudItem>
        <MudExpansionPanel Text="New Module">
            <CascadingValue Value="@_vm">
                <ShipModuleInput />
            </CascadingValue>
        </MudExpansionPanel>
    </MudItem>
    <MudItem>
    <MudSimpleTable Style="overflow-x: auto; overflow-y: auto; max-height: 500px">
        <thead>
            <ShipModuleInfoHeader />
        </thead>
        <tbody>
        @foreach(ShipModule module in _vm.Modules)
        {
            <ShipModuleInfoRow Module="module" />
        }
        </tbody>
    </MudSimpleTable>
    </MudItem>
</MudGrid>
