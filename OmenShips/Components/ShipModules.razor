<MudTabs Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" AlwaysShowScrollButton="true">
    <MudTabPanel Text="Reactor">
        <MudTable
            Dense="true"
            Filter="new Func<ShipModule, bool>(ViewModel.ModuleSelectionFilterFunc)"
            Breakpoint="Breakpoint.Xs"
            Items="ViewModel.Modules.Where(x => x.Category == ModuleCategory.Reactor)"
            Hover="true"
            T="ShipModule">
            <ToolBarContent>
                <MudTextField @bind-Value="ViewModel.ModuleSearchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                @if(ViewModel.IsModuleSlotSelection)
                {
                    <MudTh></MudTh>                    
                }
                <MudTh>Name</MudTh>
                <MudTh>Power Produced</MudTh>
                <MudTh>Slots Spaces Required</MudTh>
                <MudTh>Value</MudTh>
            </HeaderContent>
            <RowTemplate>
                @if(ViewModel.IsModuleSlotSelection)
                {
                    <MudTd><MudButton Variant="Variant.Outlined" @onclick="() => ViewModel.OnModuleInstalled(context)">Install</MudButton></MudTd>
                }
                <MudTd>@context.Name</MudTd>
                <MudTd>@context.PowerProduction</MudTd>
                <MudTd>@context.SlotSpacesRequired</MudTd>
                <MudTd>@context.Value</MudTd>
            </RowTemplate>
        </MudTable>
    </MudTabPanel>
