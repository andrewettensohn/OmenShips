<MudGrid>
    <MudItem>
        <MudTextField @bind-Value="ViewModel.SelectedModule.Name" Label="Name" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudTextField @bind-Value="ViewModel.SelectedModule.Description" Label="Description" Lines="3" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem xs="12">
        <MudSelect Label="Select Module Type" @bind-Value="ViewModel.SelectedModule.Category">
            @foreach (ModuleCategory item in Enum.GetValues(typeof(ModuleCategory)))
            {
                <MudSelectItem Value="@item">@item</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="12">
        <MudSelect Label="Select Damage Type" @bind-Value="ViewModel.SelectedModule.DamageType">
            @foreach (DamageType item in Enum.GetValues(typeof(DamageType)))
            {
                <MudSelectItem Value="@item">@item</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.SlotSpacesRequired" Label="Slot Spaces Required" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.PowerRequirement" Label="Power Requirement" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.PowerProduction" Label="Power Production" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.Damage" Label="Damage" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.Armor" Label="Armor" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.Shield" Label="Shield" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.Speed" Label="Speed" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.Volley" Label="Volley" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.Range" Label="Range" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.MissileSpeed" Label="Missile Speed" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.MissileHealth" Label="Missile Speed" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.Value" Label="Value" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.Stealth" Label="Stealth" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudNumericField @bind-Value="ViewModel.SelectedModule.Sensor" Label="Sensor" Variant="Variant.Outlined" />
    </MudItem>
    <MudItem>
        <MudCheckBox @bind-Checked="@ViewModel.SelectedModule.IsIllegal" Label="Is Illegal?"></MudCheckBox>
    </MudItem>
</MudGrid>
<MudGrid>
    <MudItem>
        <MudButton OnClick="ViewModel.AddOrReplaceModule">Submit</MudButton>
    </MudItem>
</MudGrid>

@code {
    [CascadingParameter]
    public ModuleAddEditViewModel ViewModel { get; set; }
}
